<?xml version="1.0" encoding="utf-8"?>
<extension	 type="module"	 version="2.5"	 client="site">
	<name>A Simple Hit Counter</name>
	<author>Peter Vavro</author>
	<creationDate>September 2012</creationDate>
	<copyright>Copyright (C) 2012 All rights reserved.</copyright>
	<license>GNU/GPLv3 http://www.gnu.org/licenses/gpl-3.0.html</license>
	<authorEmail>peter@vavro.me</authorEmail>
	<authorUrl>joomla.vavro.me</authorUrl>
	<version>1.0.0</version>
	<description><![CDATA[
		<h3>A Simple Hit Counter by Peter Vavro</h3>
		<h4>Version for Joomla 2.5</h4>
		<p>Release date: <b>2012-09-07</b></p>
		<p>Homepage: <b><a href="http://joomla.vavro.me/" title="joomla.vavro.me" target="_blank">joomla.vavro.me</a></b></p>
		<p><b>Thanks.</b></p>
	]]></description>
	<files>
		<filename module="mod_asimplehitcounter">mod_asimplehitcounter.php</filename>
		<filename>tmpl/default.php</filename>
		<filename>tmpl/index.html</filename>        
		<filename>helper.php</filename>
		<filename>hits.txt</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.mod_asimplehitcounter.ini</language>
		<language tag="sk-SK">sk-SK.mod_asimplehitcounter.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="title_after"
					type="radio"
					default="1"
					label="MOD_ASIMPLEHITCOUNTER_OPTION_TITLE_AFTER_LABEL"
					description="MOD_ASIMPLEHITCOUNTER_OPTION_TITLE_AFTER_DESC">
					<option value="0">JNo</option>
					<option	value="1">JYes</option>
				</field>
			</fieldset>
		</fields>
	</config>    
</extension>
